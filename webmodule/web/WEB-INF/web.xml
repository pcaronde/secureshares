<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <display-name>SecureShares Backend</display-name>

    <description>
        SecureShares Backend
    </description>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <security-constraint>
        <display-name>SecureShares Web Interface Security Contraint</display-name>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>*.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>login</role-name>
        </auth-constraint>

        <!--<user-data-constraint>
            <transport-guarantee>
                CONFIDENTIAL
            </transport-guarantee>
        </user-data-constraint>-->
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>SecureShares Authentication</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login.jsp?error=Error!!!</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>login</role-name>
    </security-role>

    <error-page>
        <error-code>403</error-code>
        <location>/login.jsp?error=Access%20Denied!!!</location>
    </error-page>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
</web-app>