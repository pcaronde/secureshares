<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource
          auth="Container"
          driverClassName="com.mysql.jdbc.Driver"
          maxActive="4"
          maxIdle="2"
          maxWait="5000"
          name="jdbc/secureshares"
          password="##db.pwd##"
          type="javax.sql.DataSource"
          url="jdbc:mysql://localhost:3306/secureshares?connectTimeout=5000&amp;socketTimeout=8000&amp;useUsageAdvisor=false"
          username="##db.user##"
          validationQuery="select 1"
          testOnBorrow="true"
          testWhileIdle="true"
          timeBetweenEvictionRunsMillis="3600000"
          numTestsPerEvictionRun="5"
          minEvictableIdleTimeMillis="600000"/>

    <Realm className="org.apache.catalina.realm.JDBCRealm"
           connectionName="##db.user##"
           connectionPassword="##db.pwd##"
           connectionURL="jdbc:mysql://localhost:3306/secureshares?connectTimeout=5000&amp;socketTimeout=8000&amp;useUsageAdvisor=false"
           digest="md5"
           driverName="com.mysql.jdbc.Driver"
           roleNameCol="rolename"
           userCredCol="password"
           userNameCol="username"
           userRoleTable="roles"
           userTable="users"/>
    <Environment name="REPOSITORY" type="java.lang.String" value="##REPOSITORY##" description="secureshares repository"/>
    <Environment name="OUTGOING_MAIL_SERVER" type="java.lang.String" value="##OUTGOING_MAIL_SERVER##" description="mail server ip"/>
    <Environment name="OUTGOING_MAIL_FROM" type="java.lang.String" value="##OUTGOING_MAIL_FROM##" description="email address from where the email is sent"/>
    <Environment name="OUTGOING_MAIL_PASSWORD" type="java.lang.String" value="##OUTGOING_MAIL_PASSWORD##" description="email password"/>

    <Environment name="SFTP_HOST" type="java.lang.String" value="##SFTP_HOST##" description="sftp host"/>
    <Environment name="SFTP_PORT" type="java.lang.String" value="##SFTP_PORT##" description="sftp port"/>
    <Environment name="SFTP_USER" type="java.lang.String" value="##SFTP_USER##" description="sftp user"/>
    <Environment name="SFTP_PASSWORD" type="java.lang.String" value="##SFTP_PASSWORD##" description="sftp password"/>
    <Environment name="SFTP_REPOSITORY" type="java.lang.String" value="##SFTP_REPOSITORY##" description="sftp repository"/>

</Context>
